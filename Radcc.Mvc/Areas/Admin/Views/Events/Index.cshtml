@model IEnumerable<Radcc.Entities.Event>

@{
    ViewBag.Title = "Index";
}

<div class="body-content">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventType.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalComment)<span class="float-right">@Html.ActionLink("Create New", "Create", "Events", new { @class = "btn btn-warning btn-xs" })</span>
            </th>
        
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventType.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdditionalComment)
                </td>
         
            </tr>
            <tr>
                <td colspan="5">@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info btn-xs" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })</td>
            </tr>
        }

    </table>
</div>