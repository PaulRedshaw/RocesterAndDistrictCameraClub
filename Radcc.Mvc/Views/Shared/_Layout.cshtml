                    <li> @Html.Partial("_LoginPartial")</li>
                </ul>
            </nav>

        </header>
        <div class="row">
            <div class="container">
                <div class="col-md-12">
                    @RenderBody()
                </div>

                <footer id="main-footer" class="second">
                    <section class="">
                        <div class="">
                            <p>&copy; @DateTime.Now.Year - Rocester and District Camera Club, All Rights Reserved</p>
                        </div>
                    </section>
                </footer>
            </div>

        </div>
        @RenderSection("Scripts", required:false)
    </body>
</html>
