    </head>
    <body>
        <header>



            <img id="logo" src="~/Images/SiteImages/Logo/RadccLogoBlackShade.svg" alt="Rocester and District Camera Club" title="Rocester and District Camera Club" />
            @*<div id="login" class="float-right">

            </div>*@

            <nav id="rightnav" role="navigation" aria-label="Primary">
                <a href="#" id="menu-icon" name="menu icon" role="navigation"></a>
                <ul class="">
                    <li>@Html.ActionLink("Homepage", "Index", "Home", new { area = "" }, new { @class = "active" }) </li>
                    <li>@Html.ActionLink("About Us", "About", "Home", new { area = "" }, new { @class = "" })</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home", new { area = "" }, new { @class = "" })</li>
                    <li>@Html.ActionLink("Programme", "CurrentProgramme", "Programmes", new { area = "" }, new { @class = "" })</li>
                    <li>@Html.ActionLink("Rules and Policies", "Index", "RulesAndPolicies", new { area = "" }, new { @class = "" })</li>
                    @*
                    <li>@Html.ActionLink("Gallery", "Index", "Gallerys", new { area = "" }, new { @class = "" })</li>*@
                    @*
                    <li>@Html.ActionLink("Admin", "Index", "Home", new { area = "Admin" }, new { @class = "" })</li>
